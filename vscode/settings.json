{
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.overrideCopy": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "f"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["<leader>", "w", "v"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        {
            "before": ["<leader>", "w", "s"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": ["<leader>", "r", "j"],
            "commands": ["editor.action.goToDeclaration"]
        },
        {
            "before": ["<leader>", "r", "k"],
            "commands": ["editor.action.goToImplementation"]
        },
        {
            "before": ["<leader>", "r", "f"],
            "commands": ["editor.action.referenceSearch.trigger"]
        },
        {
            "before": ["<leader>", "r", "h"],
            "commands": ["ccls.inheritanceHierarchy", "ccls.inheritanceHierarchy.focus"]
        },
        {
            "before": ["<leader>", "r", "c"],
            "commands": ["ccls.callHierarchy", "ccls.callHierarchy.focus"]
        },
        {
            "before": ["<leader>", "t", "l"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<leader>", "t", "h"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<leader>", "r", "a"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<leader>", "l", "b"],
            "after": ["i", "/", "/", "<ESC>", "7", "5", "a", "-", "<ESC>", "<CR>"]
        },
        {
            "before": ["<C-v>"],
            "after": ["a"],
            "commands": ["editor.action.clipboardPasteAction"]
        },
        {
            "before": ["<leader>", "l", "h"],
            "commands": [":nohl"]
        },
        {
            "before": ["<leader>", "l", "s"],
            "commands": ["cSpell.toggleEnableForGlobal"]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["<C-v>"],
            "after": [],
            "commands": ["editor.action.clipboardPasteAction"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["<C-v>"],
            "after":  [],
            "commands": ["editor.action.clipboardPasteAction"]
        },
        {
            "before": ["/", "/"],
            "after": ["y", "/", "<C-R>", "\"", "<CR>", "\""]
        },
        {
            "before": ["<leader>", "l", "h"],
            "commands": [":noh"]
        },
        {
            "before": ["<leader>", "l", "s"],
            "commands": ["cSpell.toggleEnableForGlobal"]
        }
    ],
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-x>": false
    },
    "editor.wordWrap": "off",
    "editor.rulers": [120],
    "editor.tabCompletion": "on",
    "cmake.configureOnOpen": true,
    "cmake.buildDirectory" : "${workspaceRoot}/bin/${buildType}",
    "editor.codeLens": false,
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "window.openFilesInNewWindow": "on",
    "workbench.editor.enablePreview": false,
    "ccls.cache.directory": "/tmp/.ccls",
    "cSpell.enabled": false,
    "editor.fontFamily": "'FiraCode Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "workbench.colorTheme": "Visual Studio Light",
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.formatting": "Disabled",
    "C_Cpp.errorSquiggles": "Disabled",
    "C_Cpp.intelliSenseEngine": "Disabled"
}

