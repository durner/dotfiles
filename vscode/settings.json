{
    "workbench.activityBar.visible": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.overrideCopy": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "w", "v"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        {
            "before": ["<leader>", "w", "s"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": ["<leader>", "r", "j"],
            "commands": ["editor.action.goToDeclaration"]
        },
        {
            "before": ["<leader>", "r", "k"],
            "commands": ["editor.action.goToImplementation"]
        },
        {
            "before": ["<leader>", "r", "f"],
            "commands": ["editor.action.referenceSearch.trigger"]
        },
        {
            "before": ["<leader>", "r", "h"],
            "commands": ["ccls.inheritanceHierarchy", "ccls.inheritanceHierarchy.focus"]
        },
        {
            "before": ["<leader>", "r", "b"],
            "commands": ["ccls.showBase"]
        },
        {
            "before": ["<leader>", "r", "c"],
            "commands": ["ccls.call.useCallees", "ccls.callHierarchy.focus"]
        },
        {
            "before": ["<leader>", "r", "v"],
            "commands": ["ccls.call.useCallers", "ccls.callHierarchy.focus"]
        },
        {
            "before": ["<leader>", "r", "n"],
            "commands": ["editor.action.rename"]
        },
        {
            "before": ["<leader>", "t", "l"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<leader>", "t", "h"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<leader>", "r", "a"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<leader>", "l", "b"],
            "after": ["i", "/", "/", "<ESC>", "7", "5", "a", "-", "<ESC>", "<CR>"]
        },
        {
            "before": ["<leader>", "l", "h"],
            "commands": [":nohl"]
        },
        {
            "before": ["<leader>", "l", "l"],
            "commands": [":nohl"]
        },
        {
            "before": ["<leader>", "l", "s"],
            "commands": ["cSpell.toggleEnableForGlobal"]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["<C-v>"],
            "after": [],
            "commands": ["editor.action.clipboardPasteAction"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["<C-v>"],
            "after":  [],
            "commands": ["editor.action.clipboardPasteAction"]
        },
        {
            "before": ["/", "/"],
            "after": ["y", "/", "<C-R>", "\"", "<CR>"]
        },
        {
            "before": ["<leader>", "l", "h"],
            "commands": [":noh"]
        },
        {
            "before": ["<leader>", "l", "l"],
            "commands": [":nohl"]
        },
        {
            "before": ["<leader>", "l", "s"],
            "commands": ["cSpell.toggleEnableForGlobal"]
        }
    ],
    "vim.handleKeys": {
        "<C-f>": false,
        "<C-j>": false,
        "<C-c>": false,
        "<C-x>": false
    },
    "cmake.configureOnOpen": true,
    "cmake.buildDirectory" : "${workspaceRoot}/build/${buildType}",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "window.openFilesInNewWindow": "on",
    "ccls.cache.directory": "/tmp/ccls-cache",
    "workbench.colorTheme": "Visual Studio Light",
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.formatting": "Disabled",
    "C_Cpp.errorSquiggles": "Disabled",
    "C_Cpp.intelliSenseEngine": "Disabled",
    "C_Cpp.codeFolding": "Disabled",
    "cSpell.enabled": false,
    "editor.fontFamily": "'FiraCode Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.wordWrap": "off",
    "editor.rulers": [120],
    "editor.codeLens": false,
    "editor.tabCompletion": "on",
    "editor.autoClosingBrackets": "never",
    "editor.tabSize": 4,
    "editor.cursorStyle": "line",
    "editor.insertSpaces": true,
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "explorer.confirmDelete": false,
    "editor.minimap.enabled": false,
    "vim.statusBarColorControl": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "editor.occurrencesHighlight": false,
    "editor.selectionHighlight": false,
    "window.zoomLevel": 1,
    "editor.fontSize": 12,
}

